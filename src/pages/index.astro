<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo List App</title>
    <style>
      :root {
        --primary: #4f46e5;
        --primary-hover: #4338ca;
        --danger: #dc2626;
        --danger-hover: #b91c1c;
        --text: #1f2937;
        --text-light: #6b7280;
        --bg: #f9fafb;
        --card-bg: #ffffff;
        --border: #e5e7eb;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        line-height: 1.5;
        color: var(--text);
        background-color: var(--bg);
        padding: 2rem 1rem;
      }

      .container {
        max-width: 600px;
        margin: 0 auto;
      }

      h1 {
        text-align: center;
        margin-bottom: 2rem;
        color: var(--primary);
      }

      .todo-form {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 2rem;
      }

      .todo-input {
        flex: 1;
        padding: 0.75rem 1rem;
        border: 1px solid var(--border);
        border-radius: 0.375rem;
        font-size: 1rem;
        transition: border-color 0.2s;
      }

      .todo-input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.2);
      }

      .btn {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 0.375rem;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s;
      }

      .btn-primary {
        background-color: var(--primary);
        color: white;
      }

      .btn-primary:hover {
        background-color: var(--primary-hover);
      }

      .todo-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .todo-item {
        display: flex;
        align-items: center;
        padding: 1rem;
        background-color: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 0.375rem;
        transition: transform 0.2s, box-shadow 0.2s;
      }

      .todo-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }

      .todo-checkbox {
        width: 1.25rem;
        height: 1.25rem;
        margin-right: 1rem;
        cursor: pointer;
      }

      .todo-text {
        flex: 1;
        margin-right: 1rem;
      }

      .todo-text.completed {
        text-decoration: line-through;
        color: var(--text-light);
      }

      .delete-btn {
        background: none;
        border: none;
        color: var(--danger);
        cursor: pointer;
        font-size: 1.25rem;
        line-height: 1;
        padding: 0.25rem;
        opacity: 0.7;
        transition: opacity 0.2s;
      }

      .delete-btn:hover {
        opacity: 1;
      }

      .empty-state {
        text-align: center;
        color: var(--text-light);
        padding: 2rem 0;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Todo List</h1>
      
      <form class="todo-form" id="todoForm">
        <input
          type="text"
          class="todo-input"
          id="todoInput"
          placeholder="Add a new task..."
          required
        />
        <button type="submit" class="btn btn-primary">Add</button>
      </form>

      <ul class="todo-list" id="todoList">
        {todos.length === 0 ? (
          <p class="empty-state">No tasks yet. Add one above!</p>
        ) : (
          todos.map(todo => (
            <li class="todo-item">
              <input
                type="checkbox"
                class="todo-checkbox"
                checked={todo.completed}
                onchange={`window.toggleTodo(${todo.id})`}
              />
              <span class={`todo-text ${todo.completed ? 'completed' : ''}`}>
                {todo.text}
              </span>
              <button 
                class="delete-btn" 
                onclick={`event.preventDefault(); window.deleteTodo(${todo.id});`}
              >
                ×
              </button>
            </li>
          ))
        )}
      </ul>
    </div>

    <script>
      // Declaración de tipos para TypeScript
      declare global {
        interface Window {
          addTodo: (text: string) => void;
          toggleTodo: (id: number) => void;
          deleteTodo: (id: number) => void;
        }
      }

      // Mover las funciones al ámbito global
      window.addTodo = (text) => {
        console.log('Adding todo:', text);
        // TODO: Replace with API call
        window.location.reload();
      };

      window.toggleTodo = (id) => {
        console.log('Toggling todo:', id);
        // TODO: Replace with API call
        window.location.reload();
      };

      window.deleteTodo = (id) => {
        console.log('Deleting todo:', id);
        // TODO: Replace with API call
        window.location.reload();
      };

      // Inicialización del formulario
      document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('todoForm') as HTMLFormElement | null;
        const input = document.getElementById('todoInput') as HTMLInputElement | null;

        if (form && input) {
          form.addEventListener('submit', (e) => {
            e.preventDefault();
            const text = input.value.trim();
            if (text) {
              window.addTodo(text);
              input.value = '';
            }
          });
        }
      });
    </script>
  </body>
</html>
